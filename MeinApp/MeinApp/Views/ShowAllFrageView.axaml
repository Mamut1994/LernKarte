<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MeinApp.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="vm:ShowAllFrageViewModel"
             x:Class="MeinApp.Views.ShowAllFrageView">
  <Grid>
     <Viewbox>
          <DataGrid ItemsSource="{Binding FragenListe}">
              <DataGrid.Columns>
                  <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True"/>
                  <DataGridTextColumn Header="Frage Text" Binding="{Binding FrageText}" IsReadOnly="True"/>
                  <DataGridTextColumn Header="Antwort" Binding="{Binding AntwortText}" IsReadOnly="True"/>
                   <DataGridTextColumn Header="ArtDerFrage" Binding="{Binding ArtDerFrage}" IsReadOnly="True"/>
              </DataGrid.Columns>
          </DataGrid></Viewbox>
</Grid>
</UserControl>
